<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="290dp"
            android:background="#BFC0C0">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_arrow_back_ios_24"
                android:layout_marginStart="10dp"
                android:layout_centerVertical="true"
                app:fabSize="auto"
                android:id="@+id/fltBtnArrowBackRoommate"
                android:backgroundTint="#ffb600"
                />


            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fltBtnArrowNextRoommate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:backgroundTint="#ffb600"
                android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                app:fabSize="auto" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del usuario"
            android:textSize="20sp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:id="@+id/txtShowRoommateName"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edad del usuario"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:id="@+id/txtShowRoommateAge"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:id="@+id/txtShowRoommateDescription"
            android:textStyle="bold"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="18dp"
            android:layout_height="1.5dp"
            android:src="@drawable/linea"/>



        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#ffb600"
            android:text="Contactar"
            android:layout_gravity="center"
            />

    </LinearLayout>

</androidx.cardview.widget.CardView>