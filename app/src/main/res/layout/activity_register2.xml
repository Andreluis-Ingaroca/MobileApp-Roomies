<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.RoomiesMovilesTP.RegisterActivity2">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selecciona tu tipo de cuenta"
        android:textSize="34dp"
        android:textAlignment="center"
        android:layout_marginTop="70dp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/box"
        android:layout_marginHorizontal="50dp"
        android:padding="15dp"
        android:layout_marginBottom="25dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Arrendador"
            android:textAlignment="center"
            android:textSize="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deseo colocar un anuncio de alquiler de un inmueble."
            android:textAlignment="center"
            android:textSize="20dp"
            android:padding="15dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnSeleccionArrendador"
            android:layout_marginHorizontal="40dp"
            android:text="Seleccionar"
            android:textColor="#ffffff"
            android:backgroundTint="#ffb600"
            android:layout_marginVertical="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/box"
        android:layout_marginHorizontal="50dp"
        android:padding="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Arrendatario"
            android:textAlignment="center"
            android:textSize="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deseo alquilar un inmueble/buscar un roomate."
            android:textAlignment="center"
            android:textSize="20dp"
            android:padding="15dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnSeleccionArrendatario"
            android:layout_marginHorizontal="40dp"
            android:text="Seleccionar"
            android:textColor="#ffffff"
            android:backgroundTint="#ffb600"
            android:layout_marginVertical="10dp"/>

    </LinearLayout>

</LinearLayout>