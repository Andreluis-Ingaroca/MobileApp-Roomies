<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="5dp"
    android:id="@+id/card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/imagePost"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/txtPrice"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:text="PRICE"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fltBtnFavorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:tint="#ffb600"
                app:backgroundTint="@color/white"
                android:src="@drawable/ic_baseline_favorite_border_24"
               />

            <!--            <TextView-->
            <!--                android:id="@+id/txtRating"-->
            <!--                android:layout_marginLeft="90dp"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                app:drawableStartCompat="@drawable/ic_baseline_star_24"/>-->

            <!--            <TextView-->
            <!--                android:id="@+id/txtHeart"-->
            <!--                android:layout_marginLeft="120dp"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                app:drawableStartCompat="@drawable/ic_favorite_border_black_24dp"/>-->

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:id="@+id/txtAddress"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:text="Address"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtDistrict"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:text="district"
                android:layout_marginLeft="30dp"/>

            <!--<TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtDepartment"
                android:layout_marginLeft="90dp"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:text="department"/>-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

<!--            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:id="@+id/txtArea"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:text="area"/>-->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="4"
                android:orientation="horizontal"
                android:paddingVertical="10dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_baseline_king_bed_24"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/txtRoomQuantity"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:text="rooms"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_bathtub_24"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtBathroomQuantity"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:text="bathrooms"/>

            </LinearLayout>





        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contactar"
            android:layout_gravity="center"
            android:id="@+id/btnContactarHome"
            android:layout_margin="10dp"
            android:backgroundTint="#ffb600"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>