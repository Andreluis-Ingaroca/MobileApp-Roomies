<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.RoomiesMovilesTP.FilterActivity"
    android:id="@+id/ContenedorFilter">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/txtFiltros"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Filtros"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="24dp"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ubicacion"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:layout_margin="20dp"
                android:id="@+id/txtUbicacion"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spnDepartment"
                android:spinnerMode="dialog"
                android:entries="@array/listDepartments"
                android:prompt="@string/departments_prompt"
                android:layout_marginLeft="20dp"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spnProvince"
                android:spinnerMode="dialog"
                android:entries="@array/listProvinces"
                android:prompt="@string/provinces_prompt"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spnDistrict"
                android:spinnerMode="dialog"
                android:entries="@array/listDistricts"
                android:prompt="@string/districts_prompt"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Precio (S/)"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:id="@+id/txtPrecio"/>

            <com.google.android.material.slider.RangeSlider
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:valueFrom="0"
                android:valueTo="5000"
                android:stepSize="50"
                app:labelBehavior="floating"
                app:values="@array/initial_slider_price"
                android:id="@+id/sldPrice"/>

            <!--            <TextView-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:text="Superficie"-->
            <!--                android:textStyle="bold"-->
            <!--                android:textSize="18dp"-->
            <!--                android:textColor="@color/black"-->
            <!--                android:layout_marginLeft="20dp"-->
            <!--                android:layout_marginTop="20dp"-->
            <!--                android:id="@+id/txtSuperficie"/>-->

            <!--            <com.google.android.material.slider.RangeSlider-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_marginLeft="20dp"-->
            <!--                android:valueFrom="0"-->
            <!--                android:valueTo="300"-->
            <!--                android:stepSize="10"-->
            <!--                app:labelBehavior="floating"-->
            <!--                app:values="@array/initial_slider_area"-->
            <!--                android:id="@+id/sldArea"/>-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BaÃ±os"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:id="@+id/txtBano"/>

            <RadioGroup
                android:id="@+id/rgBano"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rPrimero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:buttonTint="@color/purple_500"
                    android:layout_marginRight="40dp"
                    android:text="1" />

                <RadioButton
                    android:id="@+id/rSegundo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:layout_marginRight="40dp"
                    android:text="2"/>

                <RadioButton
                    android:id="@+id/rTercero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="+2"/>
            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Habitaciones"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:layout_margin="20dp"
                android:id="@+id/txtCuartos"/>

            <!--            <Spinner-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:id="@+id/spnAntiquity"-->
            <!--                android:spinnerMode="dialog"-->
            <!--                android:entries="@array/listAntiquity"-->
            <!--                android:prompt="@string/antiques_prompt"-->
            <!--                android:layout_marginLeft="20dp"-->
            <!--                android:layout_marginTop="10dp"/>-->

            <RadioGroup
                android:id="@+id/rgCuarto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rFirst"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:buttonTint="@color/purple_500"
                    android:layout_marginRight="40dp"
                    android:text="1" />

                <RadioButton
                    android:id="@+id/rSecond"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:layout_marginRight="40dp"
                    android:text="2"/>

                <RadioButton
                    android:id="@+id/rThird"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="+2"/>
            </RadioGroup>


            <Button
                android:id="@+id/btnApply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Aplicar"
                android:textAlignment="center"
                android:layout_marginTop="20dp"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>