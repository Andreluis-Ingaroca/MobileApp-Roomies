<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.RoomiesMovilesTP.RoomieFragment">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descubre posibles Roomates"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textAlignment="center"
            android:textSize="25sp"/>

    </LinearLayout>

    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:id="@+id/viewPager"
        android:foregroundGravity="center"
        android:layout_centerInParent="true"
        android:overScrollMode="never"
        android:clipToPadding="false"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnSearchRoomiesContact"
        android:layout_below="@+id/viewPager"
        android:layout_marginHorizontal="80dp"
        android:backgroundTint="#ffb600"
        android:text="Contactar"/>
    
    <!--<org.imaginativeworld.whynotimagecarousel.ImageCarousel
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:id="@+id/carousel"/>-->

    <!--Por ahora se mostrará este card por temas de demostración--><!--
    <include layout="@layout/cardroomate"/>-->

</RelativeLayout>